generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id              String         @id @default(cuid())
  name            String?
  email           String?        @unique
  password        String?
  role            String         @default("USER")
  emailVerified   DateTime?
  image           String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  accounts        Account[]
  licenses        License[]
  orders          Order[]
  sessions        Session[]
  tickets         Ticket[]       @relation("UserTickets")
  assignedTickets Ticket[]       @relation("AssignedTickets")
  ticketReplies   TicketReply[]

  // Referral System
  referralCode    String?        @unique
  referredBy      String?
  referrer        User?          @relation("UserReferrals", fields: [referredBy], references: [id])
  referrals       User[]         @relation("UserReferrals")
  referralRewards ReferralReward[]
  managedClicks   ReferralClick[]
  auditLogs       AuditLog[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Order {
  id            String      @id @default(cuid())
  orderRef      String      @unique
  totalAmount   Int
  currency      String      @default("HUF")
  status        String      @default("PENDING")
  paymentMethod String      @default("SIMPLEPAY") // SIMPLEPAY, TRANSFER, PAYPAL
  customerEmail String
  customerName  String?
  userId        String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  licenses      License[]
  user          User?       @relation(fields: [userId], references: [id])
  items         OrderItem[]
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  price     Int
  product   Product @relation(fields: [productId], references: [id])
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model License {
  id        String   @id @default(cuid())
  key       String   @unique
  type      String
  status    String   @default("ACTIVE")
  userId    String?
  orderId   String?
  productId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  product   Product? @relation(fields: [productId], references: [id])
  order     Order?   @relation(fields: [orderId], references: [id])
  user      User?    @relation(fields: [userId], references: [id])
}

model Lead {
  id              String   @id @default(cuid())
  name            String?
  companyName     String?
  email           String   @unique
  source          String   @default("lead-magnet")
  status          String   @default("LEAD") // LEAD / AJÁNLAT / AKTÍV / INAKTÍV
  lastContactedAt DateTime?
  notes           String?  @db.Text
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Transaction {
  id          String   @id @default(cuid())
  type        String   @default("INCOME") // INCOME, EXPENSE
  category    String   // AD, SUBSCRIPTION, SALE, SALARY, TAX, OTHER
  amount      Float
  currency    String   @default("HUF")
  taxAmount   Float    @default(0)
  date        DateTime @default(now())
  description String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model FinancialSubscription {
  id              String   @id @default(cuid())
  name            String
  provider        String?
  amount          Float
  currency        String   @default("HUF")
  billingCycle    String   @default("MONTHLY") // MONTHLY, YEARLY
  nextBillingDate DateTime?
  status          String   @default("ACTIVE") // ACTIVE, CANCELLED, EXPIRED
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Product {
  id              String      @id @default(cuid())
  name            String
  description     String
  longDescription String?
  price           Int
  category        String
  slug            String      @unique
  image           String
  features        String
  prices          String
  active          Boolean     @default(true)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  licenses        License[]
  orderItems      OrderItem[]
}

model Ticket {
  id           String         @id @default(cuid())
  ticketNumber String         @unique
  subject      String
  description  String
  status       String         @default("OPEN") // OPEN, IN_PROGRESS, WAITING_FOR_CUSTOMER, RESOLVED, CLOSED
  priority     String         @default("MEDIUM") // LOW, MEDIUM, HIGH, URGENT
  category     String         @default("GENERAL") // TECHNICAL, BILLING, GENERAL, BUG_REPORT
  userId       String
  assignedToId String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  closedAt     DateTime?
  user         User           @relation("UserTickets", fields: [userId], references: [id], onDelete: Cascade)
  assignedTo   User?          @relation("AssignedTickets", fields: [assignedToId], references: [id])
  replies      TicketReply[]
}

model TicketReply {
  id           String   @id @default(cuid())
  content      String
  ticketId     String
  userId       String
  isStaffReply Boolean  @default(false)
  createdAt    DateTime @default(now())
  ticket       Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ReferralClick {
  id           String   @id @default(cuid())
  referralCode String
  ipAddress    String?
  userAgent    String?
  createdAt    DateTime @default(now())
  ownerId      String
  owner        User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
}

model ReferralReward {
  id           String   @id @default(cuid())
  amount       Int
  currency     String   @default("HUF")
  status       String   @default("PENDING") // PENDING, PAID, CANCELLED
  recipientId  String
  recipient    User     @relation(fields: [recipientId], references: [id], onDelete: Cascade)
  sourceUserId String?  // The user who made the purchase
  createdAt    DateTime @default(now())
  paidAt       DateTime?
}

model BlogPost {
  id          String   @id @default(cuid())
  title       String
  titleEn     String?
  slug        String   @unique
  excerpt     String
  excerptEn   String?
  content     String   @db.Text
  contentEn   String?  @db.Text
  coverImage  String?
  author      String   @default("BacklineIT Team")
  tags        String[]
  published   Boolean    @default(false)
  featured    Boolean    @default(false)
  seriesId    String?
  series      BlogSeries? @relation(fields: [seriesId], references: [id])
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Metric {
  id          String   @id @default(cuid())
  key         String   @unique
  value       Int      @default(0)
  label       String
  icon        String?
  active      Boolean  @default(true)
  updatedAt   DateTime @updatedAt
}

model AuditLog {
  id        String   @id @default(cuid())
  action    String
  entity    String
  entityId  String?
  details   String?  @db.Text
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([entity])
}

model CronJob {
  id          String       @id @default(cuid())
  name        String       @unique
  description String?
  schedule    String
  endpoint    String
  apiKey      String?
  enabled     Boolean      @default(true)
  lastRun     DateTime?
  status      String       @default("IDLE")
  logs        CronJobLog[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model CronJobLog {
  id        String   @id @default(cuid())
  jobId     String
  job       CronJob  @relation(fields: [jobId], references: [id], onDelete: Cascade)
  status    String
  output    String?  @db.Text
  duration  Int?
  createdAt DateTime @default(now())

  @@index([jobId])
}

model FeatureFlag {
  id          String   @id @default(cuid())
  key         String   @unique
  description String?
  enabled     Boolean  @default(false)
  percentage  Int      @default(100)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model BlogSeries {
  id          String     @id @default(cuid())
  title       String
  titleEn     String?
  slug        String     @unique
  description String     @db.Text
  descriptionEn String?  @db.Text
  coverImage  String?
  posts       BlogPost[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model AnalyticsEvent {
  id        String   @id @default(cuid())
  name      String
  category  String   @default("general")
  properties Json?
  userId    String?
  createdAt DateTime @default(now())

  @@index([name])
  @@index([userId])
}
